#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/John/Code/personal/melon-design/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="$NODE_PATH:/Users/John/Code/personal/melon-design/node_modules/.pnpm/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../packages/core/bin/melon.js" "$@"
else
  exec node  "$basedir/../../../packages/core/bin/melon.js" "$@"
fi

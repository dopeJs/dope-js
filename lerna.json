{
  "packages": ["packages/*", "homepage"],
  "version": "0.0.6",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "npmClientArgs": ["--ignore-engines"],
  "command": {
    "run": {
      "ignoreChanges": ["dope-js-homepage"]
    },
    "version": {
      "ignoreChanges": ["dope-js-homepage"]
    },
    "publish": {
      "ignoreChanges": ["dope-js-homepage"]
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}

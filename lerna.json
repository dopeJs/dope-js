{
  "packages": ["packages/*", "homepage"],
  "version": "2.0.0",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "npmClientArgs": ["--ignore-engines"],
  "command": {
    "run": { "ignore": ["melon-js-homepage"], "ignoreChanges": ["homepage/**/*"] },
    "version": { "ignore": ["melon-js-homepage"], "ignoreChanges": ["homepage/**/*"] },
    "publish": { "ignore": ["melon-js-homepage"], "ignoreChanges": ["homepage/**/*"] },
    "bootstrap": { "npmClientArgs": ["--no-package-lock"] }
  }
}

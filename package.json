{
  "name": "dopejs",
  "version": "0.0.1",
  "description": "A simple design system and UI library.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dopeJs/dope-js"
  },
  "homepage": "https://dopejs.dev",
  "private": "true",
  "workspaces": [
    "packages/core",
    "packages/eslint",
    "packages/router",
    "packages/react",
    "homepage"
  ],
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "packageManager": "pnpm@8.6.11",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "watch": "pnpm clear-build && pnpm rollup -w",
    "build": "pnpm clear-build && pnpm rollup",
    "rollup": "rollup -c rollup1.config.ts --configPlugin typescript",
    "clear-build": "tsx ./scripts/clear-build.ts",
    "publish": "lerna run --scope @dope-js/* --ignore dopejs --no-private --stream publish",
    "start:home": "cd homepage && pnpm start",
    "build:home": "cd homepage && pnpm build",
    "preview:home": "cd homepage && pnpm preview",
    "lint": "pnpm -r --filter=@dope-js/* run lint",
    "commit": "git-cz",
    "prepare": "husky install"
  },
  "author": "John Zhang",
  "license": "MIT",
  "commitlint": {
    "extends": [
      "./scripts/commitlint-config"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./scripts/cz-prompt"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/plugin-transform-runtime": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@commitlint/cli": "^17.6.7",
    "@microsoft/api-extractor": "^7.36.3",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.3",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/node": "^20.4.6",
    "@types/rollup-plugin-peer-deps-external": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-styled-components": "^2.1.4",
    "chalk": "^5.3.0",
    "commitizen": "^4.3.0",
    "esbuild": "^0.18.17",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.1",
    "husky": "^8.0.3",
    "lerna": "^7.1.4",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "rollup": "^3.27.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "semver": "^7.5.4",
    "shelljs": "^0.8.5",
    "tsc-alias": "^1.8.7",
    "tslib": "^2.6.1",
    "tsx": "^3.12.7",
    "typescript": "5.1.6"
  }
}

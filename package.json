{
  "name": "melon-design",
  "version": "0.0.3",
  "description": "A simple design system and UI library.",
  "repository": {
    "type": "git",
    "url": "https://github.com/melonote-app/melon-design"
  },
  "workspaces": [
    "packages/*",
    "homepage"
  ],
  "packageManager": "pnpm@7.11.0",
  "engines": {
    "node": ">=16.15.0",
    "pnpm": ">=7.4.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "main": "lib/md.cjs.js",
  "module": "lib/md.es.js",
  "browser": "lib/md.umd.js",
  "types": "src/index.ts",
  "files": [
    "theme.d.ts",
    "lib"
  ],
  "exports": {
    ".": {
      "import": "./lib/md.es.js",
      "require": "./lib/md.cjs.js",
      "default": "./lib/md.umd.js"
    },
    "./lib/*": "./lib/*",
    "./jsx-runtime": "./jsx-runtime.d.ts",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "types": "lib/index.d.ts",
    "access": "public",
    "directory": "temp-package-dir",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "start": "lerna exec --scope @melon-design/react pnpm start",
    "build": "lerna exec --scope @melon-design/react pnpm build",
    "commit": "git-cz",
    "lint": "eslint .",
    "version": "lerna exec --scope @melon-design/react pnpm version",
    "publish": "lerna exec --scope @melon-design/react pnpm publish"
  },
  "author": "",
  "license": "MIT",
  "commitlint": {
    "extends": [
      "./scripts/commit-lint-config"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./scripts/cz-prompt"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "commitizen": "^4.2.5",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "lerna": "^5.5.1",
    "semver": "^7.3.7",
    "shelljs": "^0.8.5",
    "typescript": "^4.8.3"
  }
}

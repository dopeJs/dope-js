{
  "name": "@melon-js/design",
  "version": "0.0.5",
  "description": "A simple design system and UI library.",
  "repository": {
    "type": "git",
    "url": "https://github.com/melonote-app/melon-design",
    "directory": "packages/design"
  },
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "packageManager": "pnpm@7.12.0",
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "browser": "lib/index.umd.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "theme.d.ts"
  ],
  "exports": {
    ".": {
      "import": "./lib/index.es.js",
      "require": "./lib/index.cjs.js",
      "default": "./lib/index.umd.js"
    },
    "./lib/*": "./lib/*",
    "./package.json": "./package.json",
    "./theme": {
      "types": "./theme.d.ts"
    }
  },
  "publishConfig": {
    "types": "lib/index.d.ts",
    "access": "public",
    "directory": ".melon.publish",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepublishOnly": "rimraf ./.melon.publish && clean-publish --access public",
    "postpublish": "rimraf ./.melon.publish",
    "lint": "eslint --cache --ext .ts src/**"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@floating-ui/react-dom": "^1.0.0",
    "@floating-ui/react-dom-interactions": "^0.9.3",
    "rc-dialog": "^8.9.0",
    "rc-tree": "^5.7.0",
    "react-is": "^18.2.0",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@types/node": "^18.7.18",
    "@types/react": "^18.0.20",
    "@types/styled-components": "^5.1.26",
    "clean-publish": "^4.0.1"
  },
  "peerDependencies": {
    "react": ">=17.0.2"
  }
}

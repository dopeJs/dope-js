{
  "name": "@melon-js/design",
  "version": "0.0.3",
  "description": "A simple design system and UI library.",
  "repository": {
    "type": "git",
    "url": "https://github.com/melonote-app/melon-design"
  },
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "packageManager": "pnpm@7.12.0",
  "main": "lib/design.cjs.js",
  "module": "lib/design.es.js",
  "browser": "lib/design.umd.js",
  "types": "src/index.ts",
  "files": [
    "lib",
    "theme.d.ts"
  ],
  "exports": {
    ".": {
      "import": "./lib/design.es.js",
      "require": "./lib/design.cjs.js",
      "default": "./lib/design.umd.js"
    },
    "./lib/*": "./lib/*",
    "./package.json": "./package.json",
    "./theme": {
      "types": "./theme.d.ts"
    }
  },
  "publishConfig": {
    "types": "lib/index.d.ts",
    "access": "public",
    "directory": "temp-package-dir",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "rimraf lib && rollup -cw",
    "build": "rimraf lib && rollup -c && tsc-alias",
    "clean-publish": "clean-publish --access public",
    "prepublishOnly": "rimraf ./temp-package-dir && run-s build clean-publish",
    "postpublish": "rimraf ./temp-package-dir",
    "lint": "eslint --cache --ext .ts src/**"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@floating-ui/react-dom": "^1.0.0",
    "@floating-ui/react-dom-interactions": "^0.9.3",
    "rc-dialog": "^8.9.0",
    "rc-tree": "^5.7.0",
    "react-is": "^18.2.0",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "@types/node": "^18.7.18",
    "@types/react": "^18.0.20",
    "@types/styled-components": "^5.1.26",
    "clean-publish": "^4.0.1",
    "rollup": "^2.79.0",
    "tsc-alias": "^1.7.0",
    "tslib": "^2.4.0"
  },
  "peerDependencies": {
    "react": ">=17.0.2"
  }
}

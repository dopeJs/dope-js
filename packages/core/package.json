{
  "name": "@melon-js/core",
  "version": "0.0.1",
  "description": "React router like nextjs.",
  "repository": {
    "type": "git",
    "url": "https://github.com/melonote-app/melon-js"
  },
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "packageManager": "pnpm@7.12.0",
  "bin": {
    "melon": "./bin/melon.js"
  },
  "main": "./lib/index.js",
  "types": "src/index.ts",
  "files": [
    "bin",
    "lib",
    "files"
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.js"
    },
    "./lib/*": "./lib/*",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "types": "lib/index.d.ts",
    "access": "public",
    "directory": "temp-package-dir",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "rimraf lib && pnpm run build-bundle -w",
    "build": "rimraf lib && run-s build-bundle build-types",
    "build-bundle": "rollup -c",
    "build-types": "run-s build-temp-types roll-types",
    "build-temp-types": "rimraf temp && tsc --emitDeclarationOnly --outDir temp -p src",
    "roll-types": "api-extractor run && rimraf temp",
    "clean-publish": "clean-publish --access public",
    "prepublishOnly": "rimraf ./temp-package-dir && run-s build clean-publish",
    "postpublish": "rimraf ./temp-package-dir",
    "lint": "eslint --cache --ext .ts src/**"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@microsoft/api-extractor": "^7.31.1",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "@types/debug": "^4.1.7",
    "@types/etag": "^1.8.1",
    "clean-publish": "^4.0.1",
    "rollup": "^2.79.0",
    "tslib": "^2.4.0"
  },
  "dependencies": {
    "@types/mime-types": "^2.1.1",
    "@vitejs/plugin-react": "^2.1.0",
    "chalk": "^4.1.2",
    "commander": "^9.4.0",
    "debug": "^4.3.4",
    "devcert": "^1.2.2",
    "etag": "^1.8.1",
    "fast-glob": "^3.2.12",
    "find-up": "^5.0.0",
    "mime-types": "^2.1.35",
    "vite": "^3.1.2",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-index-html": "^2.0.2",
    "vite-plugin-virtual-html": "^0.2.11",
    "winston": "^3.8.2"
  }
}
